<div class="flex justify-center">
  <% if @linked_project && @linked_project.persisted? %>
    <strong><%= @linked_project.name %></strong>&nbsp;has been linked to Vocab builder.
  <% else %>
    <% if @todoist_projects.present? %>
      <%= form_with model: @linked_project, url: main_app.enabled_automation_projects_path(@enabled_automation), local: true do |form| %>
        <div class="flex flex-col gap-2">
          <div>
            <%= form.label :linked_project, "Link a project to use with Vocab builder" %>
            <%= form.select :todoist_id, @todoist_projects.collect { |p| [p.name, p.id] }, class: "w-full" %>
          </div>
          <div>
            <%= form.submit "Select", class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>